<!-- component -->
<section class="bg-white dark:bg-gray-900">
    <div class="flex justify-center min-h-screen">
        <!-- Imagem de fundo -->
        <div class="hidden bg-cover lg:block lg:w-2/5" style="background-image: url('https://via.placeholder.com/1600x900');">
        </div>

        <!-- Formulário de Cadastro de Fornecedor -->
        <div class="flex items-center w-full max-w-3xl p-8 mx-auto lg:px-12 lg:w-3/5">
            <div class="w-full">
                <h1 class="text-2xl font-semibold tracking-wider text-gray-800 capitalize dark:text-white">
                    Cadastro de Fornecedor
                </h1>

                <p class="mt-4 text-gray-500 dark:text-gray-400">
                    Preencha os campos abaixo para criar sua conta de fornecedor.
                </p>

                <form action="/cadastro/fornecedor" method="POST" class="grid grid-cols-1 gap-6 mt-8 md:grid-cols-2">
                    <!-- Nome Completo -->
                    <div>
                        <label for="NomeCompleto" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Nome Completo</label>
                        <input type="text" id="NomeCompleto" name="NomeCompleto" placeholder="Seu nome completo"
                            class="block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                    </div>

                    <!-- E-mail -->
                    <div>
                        <label for="Email" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">E-mail</label>
                        <input type="email" id="Email" name="Email" placeholder="exemplo@examplo.com"
                            class="block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                    </div>

                    <!-- Senha -->
                    <div>
                        <label for="Senha" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Senha</label>
                        <input type="password" id="Senha" name="Senha" placeholder="Insira uma senha"
                            class="block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                    </div>

                    <!-- Confirmar Senha -->
                    <div>
                        <label for="ConfirmarSenha" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Confirmar Senha</label>
                        <input type="password" id="ConfirmarSenha" name="ConfirmarSenha" placeholder="Confirme sua senha"
                            class="block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                    </div>

                    <!-- Telefone -->
                    <div>
                        <label for="Telefone" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">Telefone</label>
                        <input type="text" id="Telefone" name="Telefone" placeholder="XX-X-XXXX-XXXX"
                            class="block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                    </div>

                    <!-- CNPJ -->
                    <div>
                        <label for="CNPJ" class="block mb-2 text-sm text-gray-600 dark:text-gray-200">CNPJ</label>
                        <input type="text" id="CNPJ" name="CNPJ" placeholder="XX.XXX.XXX/XXXX-XX"
                            class="block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                    </div>

                    <!-- Foto de Perfil (opcional) -->
                    <div>
                        <label for="LogoFornecedor" class="block text-sm font-medium text-gray-700">Logo da Empresa</label>
                        <input type="file" id="LogoFornecedor" name="LogoFornecedor"
                            class="mt-1 p-2 w-full border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                    </div>

                    <!-- Botão de Cadastro -->
                    <button type="submit" class="mt-3 w-full px-6 py-3 text-white bg-blue-500 rounded-md focus:outline-none hover:bg-blue-600">
                        Registrar
                    </button>
                </form>

                <!-- Link para Login -->
                <div class="mt-4 text-center">
                    <span class="text-sm text-gray-500 dark:text-gray-400">
                        Já tem uma conta? 
                    </span>
                    <a href="/login" class="text-sm text-blue-500 hover:text-blue-600 dark:text-blue-400 dark:hover:text-blue-300">
                        Faça Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
