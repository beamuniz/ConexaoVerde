<section class="container mx-auto p-10 md:p-20 antialiased">
    <!-- Lista de Produtos -->
    <div class="flex flex-col gap-8">
        <h1 class="text-4xl font-bold text-center mb-8">Produtos Disponíveis</h1>

        <!-- Exemplo de Produto (Substitua pela iteração do foreach) -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
            @foreach (var produto in Model)
            {
                <article class="w-full bg-white shadow-md rounded-xl duration-500 hover:scale-105 hover:shadow-xl">
                    <!-- Imagem do Produto -->
                    <img class="h-80 w-full object-cover rounded-t-xl" 
                         src="data:image/jpeg;base64,@produto.ImgProdutoBase64" 
                         alt="@produto.NomeProduto">

                    <!-- Detalhes do Produto -->
                    <div class="p-5">
                        <h1 class="text-2xl font-semibold text-gray-800 truncate">
                            @produto.NomeProduto
                        </h1>
                        <p class="text-gray-500 mt-2 text-lg truncate">
                            @produto.Descricao
                        </p>
                    </div>

                    <!-- Informações Extras e Botão -->
                    <div class="bg-blue-50 p-5 rounded-b-xl">
                        <div class="sm:flex sm:justify-between items-center">
                            <div>
                                <div class="text-lg text-gray-700">
                                    <span class="text-gray-900 font-bold">196 km</span> de São Paulo
                                </div>
                                <div class="flex items-center mt-1">
                                    <!-- Ícones de Estrelas -->
                                    <div class="flex">
                                        <svg class="w-5 h-5 text-green-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 14 14">
                                            <path d="M6.43 12l-2.36 1.64a1 1 0 0 1-1.53-1.11l.83-2.75a1 1 0 0 0-.35-1.09L.73 6.96a1 1 0 0 1 .59-1.8l2.87-.06a1 1 0 0 0 .92-.67l.95-2.71a1 1 0 0 1 1.88 0l.95 2.71c.13.4.5.66.92.67l2.87.06a1 1 0 0 1 .59 1.8l-2.3 1.73a1 1 0 0 0-.34 1.09l.83 2.75a1 1 0 0 1-1.53 1.1L7.57 12a1 1 0 0 0-1.14 0z"></path>
                                        </svg>
                                        <!-- Repita os ícones conforme necessário -->
                                    </div>
                                    <span class="ml-2 text-gray-600 text-sm">
                                        16 avaliações
                                    </span>
                                </div>
                            </div>
                            <button class="py-2 px-5 bg-green-700 hover:bg-green-600 font-bold text-white text-lg rounded-lg shadow-md">
                                Comprar
                            </button>
                        </div>
                        <div class="mt-3 text-gray-600 text-sm">
                            *Ofertas especiais disponíveis!
                        </div>
                    </div>
                </article>
            }
        </div>
    </div>
</section>
