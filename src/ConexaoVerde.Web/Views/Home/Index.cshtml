        <div class="mt-8 lg:mt-20">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Contact Information -->
                <div>
                    <div class="max-w-full mx-auto rounded-lg overflow-hidden">
                        <!-- Contact Section -->
                        <div class="border-t border-gray-200 px-6 py-4">
                            <h3 class="text-lg font-bold text-[#2C2F33]">Contato</h3>
                            <p class="mt-1 font-bold text-gray-600">
                                <a href="tel:+551139906000">Telefone: +55 (11) 3990-6000</a>
                            </p>
                            <a class="flex m-1" href="tel:+551139906000">
                                <div class="flex-shrink-0">
                                    <div class="flex items-center justify-between h-10 w-30 rounded-md bg-[#98FF98] text-white p-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
