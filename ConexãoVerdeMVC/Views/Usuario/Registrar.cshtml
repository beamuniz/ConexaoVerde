@model ConexãoVerdeMVC.Models.UsuarioModel

@{
    ViewData["Title"] = "Criar Usuário";
}

<h1>Criar Usuário</h1>

<form asp-action="Registrar" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Senha"></label>
        <input asp-for="Senha" type="password" class="form-control" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FotoPerfil"></label>
        <input asp-for="FotoPerfil" type="file" class="form-control" />
        <span asp-validation-for="FotoPerfil" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Perfil"></label>
        <input asp-for="Perfil" class="form-control" />
        <span asp-validation-for="Perfil" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<div>
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Voltar para home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
