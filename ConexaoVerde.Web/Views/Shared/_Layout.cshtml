<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Conexão Verde</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConexaoVerdeMVC.styles.css" asp-append-version="true" />
</head>
<body class="bg-background">

<!-- Header (Navbar) -->
<header>
    <nav class="sticky top-0 bg-[#2d7c2f] text-white z-20 shadow-md">
        <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="flex items-center">
                    <a href="/" class="flex items-center">
                        <img src="~/images/logo.png" alt="Logo Home" class="h-24 w-auto">
                    </a>
                </div>

                <!-- Botões Login e Cadastrar-se -->
                <div class="flex gap-4">
                    <a href="/Login/Login" class="bg-[#2f855a] text-white py-2 px-4 rounded-md text-sm font-medium transition-colors duration-300 hover:bg-[#276749]">
                        Login
                    </a>
                    <span class="text-white">|</span>
                    <a href="/Usuario/Cadastro" class="bg-[#48bb78] text-white py-2 px-4 rounded-md text-sm font-medium transition-colors duration-300 hover:bg-[#38a169]">
                        Cadastrar-se
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>

<!-- Main content -->
<div class="container mx-auto px-4 py-6">
    <main role="main" class="pb-6">
        @RenderBody()
    </main>
</div>

  <!-- Footer -->
  <footer class="bottom-0 left-0 w-full text-white relative">
    <!-- Waves Background -->
    <div>
      <div class="wave"></div>
      <div class="wave"></div>
      <div class="wave"></div>
    </div>

    <div class="container mx-auto px-4 py-6 relative z-10">
      <div class="text-center">
        <p>&copy; 2024 - Conexão Verde - <a href="/Home/Privacy" class="text-white">Política de Privacidade</a></p>
      </div>
    </div>
  </footer>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
