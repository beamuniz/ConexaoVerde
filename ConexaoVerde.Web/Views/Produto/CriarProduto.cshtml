@model ConexaoVerde.Web.Models.ProdutoModel

@{
ViewData["Title"] = "Cadastro de Produto";
}

<h1>Cadastro de Produto</h1>
<body class="bg-gray-100 min-h-screen grid place-items-center">

<div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-3xl">
    <!-- Exibindo o título com estilo -->
    <div class="text-center mb-7">
        <h1 class="text-4xl font-bold text-green-600">
            @ViewData["Title"]
        </h1>
        <p class="text-green-400">Preencha as informações abaixo para cadastrar um novo produto.</p>
    </div>

    <!-- Formulário -->
    <form asp-action="CriarProduto" method="post" class="space-y-7">
        <!-- Nome do Produto -->
        <div>
            <label asp-for="NomeProduto" class="block text-sm font-medium text-gray-700">Produto</label>
            <input asp-for="NomeProduto"
                   type="text"
                   placeholder="Nome do Produto"
                   class="mt-1 mb-4 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm"/>
            <span asp-validation-for="NomeProduto" class="text-sm text-red-600"></span>
        </div>

        <!-- Preço -->
        <div>
            <label asp-for="Preco" class="block text-sm font-medium text-gray-700">Preço</label>
            <input asp-for="Preco"
                   type="number"
                   step="0.01"
                   placeholder="Digite o Preço"
                   class="mt-1 mb-4 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm"/>
            <span asp-validation-for="Preco" class="text-sm text-red-600"></span>
        </div>

        <!-- Descrição -->
        <div>
            <label asp-for="Descricao" class="block text-sm font-medium text-gray-700">Descrição</label>
            <textarea asp-for="Descricao"
                      rows="3"
                      placeholder="Escreva uma Descrição Detalhada do Produto"
                      class="mt-1 mb-4 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm"></textarea>
            <span asp-validation-for="Descricao" class="text-sm text-red-600"></span>
        </div>

        <!-- Categoria -->
        <div>
            <label asp-for="Categoria.Id" class="block text-sm font-medium text-gray-700">Categoria</label>
            <select asp-for="Categoria.Id" asp-items="ViewBag.Categorias"
                    class="mt-1 mb-4 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm">
                <option value="">Selecione</option>
            </select>
            <span asp-validation-for="Categoria.Id" class="text-sm text-red-600"></span>
        </div>

        <!-- Fornecedor -->
        <div>
            <label asp-for="Fornecedor.Id" class="block text-sm font-medium text-gray-700">Fornecedor</label>
            <select asp-for="Fornecedor.Id" asp-items="ViewBag.Fornecedores"
                    class="mt-1 mb-4 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm">
                <option value="">Selecione</option>
            </select>
            <span asp-validation-for="Fornecedor.Id" class="text-sm text-red-600"></span>
        </div>

        <!-- Imagens -->
        <div>
            <label asp-for="ImgProduto" class="block text-sm font-medium text-gray-700">Imagens</label>
            <input asp-for="ImgProduto"
                   type="file"
                   multiple
                   class="mt-1 mb-4 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm"/>
        </div>

        <!-- Botões -->
        <div class="flex items-center justify-between">
            <button type="submit"
                    class="bg-green-600 text-white px-6 py-2 rounded-lg shadow-sm hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                Salvar
            </button>
            <a href="/Home/Index"
               class="text-green-600 hover:underline">
                Voltar
            </a>
        </div>
    </form>
</div>
</body>

@section Scripts {
<partial name="_ValidationScriptsPartial"/>
}
