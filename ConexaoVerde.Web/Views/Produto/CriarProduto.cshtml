@model ConexaoVerde.AppData.Entities.Produto

@{
    ViewData["Title"] = "Cadastro de Produto";
}

<h1>Cadastro de Produto</h1>

<form asp-action="CriarProduto" method="post">
    <div class="form-group">
        <label asp-for="NomeProduto" class="control-label"></label>
        <input asp-for="NomeProduto" class="form-control"/>
        <span asp-validation-for="NomeProduto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preco" class="control-label"></label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01"/>
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao" class="control-label"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaId" class="control-label">Categoria</label>
        <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" class="form-control">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FornecedorId" class="control-label">Fornecedor</label>
        <select asp-for="FornecedorId" asp-items="ViewBag.Fornecedores" class="form-control">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="FornecedorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImgProduto" class="control-label">Imagens</label>
        <input asp-for="ImgProduto" class="form-control-file" type="file" multiple/>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="/Home/Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}